<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/portrait_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/portrait_default" >
        </ImageView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/live_list_bg"
        android:paddingBottom="10dip" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/contentText"
            android:layout_margin="5dip"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            style="@style/contentText"
            android:layout_margin="5dip" />

        <TextView
            android:id="@+id/user_act_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentTextGreen"
            android:layout_below="@+id/user_name"
            android:layout_margin="5dip"/>

        <ImageView
            android:id="@+id/user_act_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_act_text"
            android:layout_margin="5dip"
            android:adjustViewBounds="true"
            android:maxHeight="600dip"
            android:maxWidth="380dip" />
    </RelativeLayout>

</LinearLayout>