<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar_selector"
    android:orientation="horizontal"
    android:paddingLeft="10dip" >

    <LinearLayout
        android:id="@+id/portraitLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/portrait_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/friend_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/portrait_default" >
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/friend_name"
        style="@style/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/portraitLinearLayout"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/friend_select_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:background="@drawable/checkbox_unselected" >
    </ImageView>

</RelativeLayout>